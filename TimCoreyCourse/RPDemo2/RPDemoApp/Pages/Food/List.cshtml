@page
@model RPDemoApp.Pages.Food.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<table class="table table-striped border">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model.Food)
        {
            <tr>
                <td>@food.Title</td>
                <td>@food.Description</td>
                <td>@food.Price.ToString("c")</td>
            </tr>
        }
    </tbody>
</table>